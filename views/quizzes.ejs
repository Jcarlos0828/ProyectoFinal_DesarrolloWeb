<%- include ("./templates/_header") %>
<h1 class="text-center">Quizzes</h1>
<p class="text-center"> Selecciona la categor√≠a sobre la que quieres aprender hoy</p>
<div class="container">
  <div class = "col-md">
    <% quizzes.forEach(quiz => {%>
      <a href="/quizzes/preguntas/<%= quiz._id %>/0?user=<%= user %>">
        <button class="btn btn-primary" type="submit">
          <%= quiz.titulo %>
        </button>
      </a>
    <% }); %>
  </div>
</div>

<%- include ("./templates/_footer") %>

