<%- include ("./templates/_header") %>
<h1 class="text-center"> ¡Bienvenidos! </h1>
<div class="container">
  <div class = "col-md">
    <% if (dataErr) { %>
      <h4><%= dataErr.message %></h4>
    <% } %>
  </div>
  <div class = "col-md">
    <div class="row">
      <!-- Tarjeta de registro-->
      <div class="col-md-5">
        <div class="card" style="background-color: #E9FAE3;">
          <div class="card-body">
            <h3>Registro</h3>
            <!-- A partir de aqui hace funcionar el boton-->
            <form action="/signup" method="post">
              <div>
                <label for="name"> Nombre </label>
                <input id="name" name="name" type="text" placeholder="Nombre"/>
              </div>
    
              <div>
                <label for="email"> Correo </label>
                <input id="email" name="email" type="text" placeholder="example@mail.com"/>
              </div>
    
              <div>
                <label for="password"> Contraseña </label>
                <input id="password" name="password" type="password" placeholder="Contraseña"/>
              </div>
              
              <div class="button-send">
                <button class="btn btn-primary" type="submit">
                  Registrarme
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
      
      <!-- Tarjeta de inicio de sesión-->
      <div class="col-md-5">
        <div class="card" style="background-color: #D8E9E9;">
          <div class="card-body">
            <h3>Iniciar sesión</h3>
            <!-- A partir de aqui hace funcionar el boton-->
            <form action="/login" method="post">
              <div>
                <label for="email"> Correo </label>
                <input id="email" name="email" type="text" placeholder="example@mail.com"/>
              </div>
  
              <div>
                <label for="password"> Contraseña </label>
                <input id="password" name="password" type="password" placeholder="Contraseña"/>
              </div>
              
              <div class="button-send">
                <button class="btn btn-primary" type="submit">
                  Iniciar sesión
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>

<%- include ("./templates/_footer") %>

<style>
  h1, h3{
    padding: 10px;
    text-align: center;
  }

  .row{
    display: flex;
    justify-content: center;
  }

  .card{
    margin: 10px;
  }
  
  .card-body form div{
    display: flex;
    justify-content: space-between;
    padding: 10px;
    flex-wrap: wrap;
  }

  .card-body form .button-send{
    display: flex;
    justify-content: end;
  }
</style>
